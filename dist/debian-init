#!/bin/sh
# -*- mode: shell; -*-

### BEGIN INIT INFO
# Provides:          marcd
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Enable service provided by daemon.
### END INIT INFO

set -e

BINARY=/usr/bin/MArCd
CONFIGFILE=/etc/marc/marcd.conf
PIDFILE=/var/lib/marc/marcd.pid
NAME="MA Control Daemon"

. /lib/lsb/init-functions

case "$1" in
    start)
        log_daemon_msg "Starting $NAME" "marcd"

        if [ ! -e $CONFIGFILE ]; then
            log_action_msg "No configuration present, create \`$CONFIGFILE' and try again!"
			log_end_msg 1
			exit 1
        fi

		start-stop-daemon --start --chdir /var/lib/marc --pidfile $PIDFILE --exec $BINARY -- \
            --pidfile $PIDFILE \
            --relay --syslog --daemon
		log_end_msg $?
		;;

	stop)
        log_daemon_msg "Stopping $NAME" "marcd"
        start-stop-daemon --stop --signal INT --pidfile $PIDFILE
		log_end_msg $?
		;;

	status)
		status_of_proc -p $PIDFILE $BINARY "$NAME"
		;;

	restart)
		$0 stop && $0 start
		;;

	*)
		echo "Usage: $0 {start|stop|status|restart}"
		exit 2
esac
